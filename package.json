{
	"name": "manysweeper",
	"version": "1.0.0",
	"scripts": {
		"build-dev": "cross-env DEV=1 tsc-watch --onSuccess \"node ./dist/server/main\"",
		"bundle-dev": "watchify -v -t babelify ./dist/client/app.js -o ./public/bundle.js",
		"build": "tsc && browserify -t babelify ./dist/client/app.js -o ./public/bundle.js",
		"start": "nodemon ./dist/server/main"
	},
	"dependencies": {
		"@babel/preset-env": "^7.23.2",
		"@babel/preset-react": "^7.22.15",
		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@fontsource/roboto": "^5.0.8",
		"@mui/icons-material": "^5.14.16",
		"@mui/material": "^5.14.16",
		"@mui/x-data-grid": "^6.18.1",
		"@types/react": "^18.2.34",
		"@types/react-dom": "^18.2.14",
		"babelify": "^10.0.0",
		"body-parser": "^1.20.2",
		"browserify": "^17.0.0",
		"cookie": "^0.5.0",
		"cookie-parser": "^1.4.6",
		"express": "^4.18.2",
		"mui-color-input": "^2.0.1",
		"nodemon": "^3.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-helmet": "^6.1.0",
		"react-router": "^6.19.0",
		"react-router-dom": "^6.19.0",
		"signale": "^1.4.0",
		"typescript": "^5.2.2",
		"uglify-js": "^3.17.4",
		"uuid": "^9.0.1",
		"watchify": "^4.0.0",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.4",
		"@types/cookie": "^0.5.3",
		"@types/cookie-parser": "^1.4.5",
		"@types/express": "^4.17.19",
		"@types/signale": "^1.4.6",
		"@types/uuid": "^9.0.6",
		"@types/ws": "^8.5.7",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.52.0",
		"prettier": "^3.0.3",
		"tsc-watch": "^6.0.4"
	},
	"nodemonConfig": {
		"ext": "js,json",
		"ignore": [
			"node_modules",
			"public",
			".idea"
		],
		"delay": 500
	},
	"prettier": {},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"root": true
	},
	"signale": {
		"displayDate": true,
		"displayTimestamp": true
	}
}
