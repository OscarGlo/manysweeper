{
	"name": "manysweeper",
	"version": "1.0.0",
	"scripts": {
		"build": "tsc && browserify ./dist/client/script.js | uglifyjs > public/bundle.js",
		"start": "nodemon dist/server/main"
	},
	"dependencies": {
		"body-parser": "^1.20.2",
		"browserify": "^17.0.0",
		"cookie": "^0.5.0",
		"cookie-parser": "^1.4.6",
		"express": "^4.18.2",
		"nodemon": "^3.0.1",
		"signale": "^1.4.0",
		"typescript": "^5.2.2",
		"uglify-js": "^3.17.4",
		"uuid": "^9.0.1",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.4",
		"@types/cookie": "^0.5.3",
		"@types/cookie-parser": "^1.4.5",
		"@types/express": "^4.17.19",
		"@types/signale": "^1.4.6",
		"@types/uuid": "^9.0.6",
		"@types/ws": "^8.5.7",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"prettier": "^3.0.3"
	},
	"nodemonConfig": {
		"ext": "js,json",
		"ignore": [
			"node_modules",
			"public",
			".idea"
		],
		"delay": 2
	},
	"prettier": {},
	"eslintConfig": {
		"extends": [
			"eslint:recommended", "plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"root": true
	},
	"signale": {
		"displayDate": true,
		"displayTimestamp": true
	}
}
